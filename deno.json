{
   "name": "@kvl/bsmap",
   "version": "2.3.0",
   "license": "MIT",
   "exports": {
      ".": "./src/mod.ts",
      "./extensions/heck": "./src/extensions/heck/mod.ts",
      "./extensions/parity": "./src/extensions/parity/mod.ts",
      "./extensions/placement": "./src/extensions/placement/mod.ts",
      "./extensions/renamer": "./src/extensions/renamer/mod.ts",
      "./extensions/selector": "./src/extensions/selector/mod.ts",
      "./extensions/stats": "./src/extensions/stats/mod.ts",
      "./extensions/swing": "./src/extensions/swing/mod.ts",
      "./patch": "./src/patch/mod.ts",
      "./shims": "./src/shims/mod.ts"
   },
   "publish": {
      "exclude": [".git", ".github", "dnt.ts", "npm", "coverage", "tests"]
   },
   "imports": {
      "@standard-schema/spec": "jsr:@standard-schema/spec@^1.0.0",
      "valibot": "jsr:@valibot/valibot@^1.2.0"
   },
   "exclude": [".git", "npm", "coverage"],
   "lock": false,
   "fmt": {
      "indentWidth": 3,
      "lineWidth": 100,
      "singleQuote": true
   },
   "tasks": {
      "npm": "deno run -A ./dnt.ts",
      "npm:clean": "rm -r ./npm",
      "check": "deno task check:main && deno task check:extensions-heck && deno task check:extensions-parity && deno task check:extensions-placement && deno task check:extensions-renamer && deno task check:extensions-selector && deno task check:extensions-stats && deno task check:extensions-swing && deno task check:patch && deno task check:shims",
      "check:main": "deno check src/mod.ts",
      "check:extensions-heck": "deno check src/extensions/heck/mod.ts",
      "check:extensions-parity": "deno check src/extensions/parity/mod.ts",
      "check:extensions-placement": "deno check src/extensions/placement/mod.ts",
      "check:extensions-renamer": "deno check src/extensions/renamer/mod.ts",
      "check:extensions-selector": "deno check src/extensions/selector/mod.ts",
      "check:extensions-stats": "deno check src/extensions/stats/mod.ts",
      "check:extensions-swing": "deno check src/extensions/swing/mod.ts",
      "check:patch": "deno check src/patch/mod.ts",
      "check:shims": "deno check src/shims/mod.ts",
      "check:jsr": "deno publish --dry-run",
      "check:npm": "cd npm && npx depcheck && npm publish --dry-run",
      "test": "deno task test:clean || true && deno task test:run && deno task test:coverage",
      "test:coverage": "deno coverage --html",
      "test:run": "deno test --parallel --allow-read --coverage tests/",
      "test:serial": "deno test --allow-read",
      "test:clean": "rm -r ./coverage",
      "clean": "deno task test:clean || true && deno task npm:clean || true",
      "ci": "deno fmt --check && deno task check && deno task test && deno task npm"
   }
}
